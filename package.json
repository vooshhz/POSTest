{
  "name": "liquorpos-lite",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "description": "Professional Point of Sale system for liquor stores",
  "author": "LiquorPOS Solutions",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:win": "npm run build:win64",
    "build:win32": "npm run clean && tsc && vite build && electron-builder --win --ia32",
    "build:win64": "npm run clean && tsc && vite build && electron-builder --win --x64",
    "build:win-all": "npm run clean && tsc && vite build && electron-builder --win --x64 --ia32",
    "build:portable": "npm run clean && tsc && vite build && electron-builder --win portable",
    "build:dir": "npm run clean && tsc && vite build && electron-builder --dir",
    "build:test": "npm run clean && tsc && vite build && electron-builder --win --x64 --config.compression=store",
    "dist": "npm run build:win-all",
    "dist:win": "npm run build:win64",
    "dist:win32": "npm run build:win32",
    "clean": "rimraf dist dist-electron release",
    "clean:all": "npm run clean && rimraf node_modules",
    "rebuild": "npx electron-rebuild",
    "rebuild:sqlite": "npx electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps && npx electron-rebuild",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "pack": "electron-builder --dir",
    "release": "npm run build:win64 && npm run build:win32"
  },
  "dependencies": {
    "@types/papaparse": "^5.3.16",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.2.0",
    "bindings": "^1.5.0",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.3.1",
    "file-uri-to-path": "^2.0.0",
    "jsbarcode": "^3.12.1",
    "lucide-react": "^0.538.0",
    "node-addon-api": "^8.5.0",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}